@model IEnumerable<Materia>

@{
    ViewData["Title"] = "Listado de materias";
}

<h1 class="mb-4">Listado de Materias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Crear nueva materia
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre de la materia</th>
            <th>Docente</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreMateria</td>
                <td>@item.Docente</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MateriaId" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <span> | </span>
                    <a asp-action="Details" asp-route-id="@item.MateriaId" class="btn btn-sm btn-info text-white">
                        Detalles
                    </a>
                    <span> | </span>
                    <a asp-action="Delete" asp-route-id="@item.MateriaId" class="btn btn-sm btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
