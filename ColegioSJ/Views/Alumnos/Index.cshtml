@model IEnumerable<Alumno>

@{
    ViewData["Title"] = "Listado de alumnos";
}

<h1 class="mb-4">Listado de Alumnos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Crear nuevo alumno
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Fecha de nacimiento</th>
            <th>Grado</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@(item.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "—")</td>
                <td>@item.Grado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlumnoId" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <span> | </span>
                    <a asp-action="Details" asp-route-id="@item.AlumnoId" class="btn btn-sm btn-info text-white">
                        Detalles
                    </a>
                    <span> | </span>
                    <a asp-action="Delete" asp-route-id="@item.AlumnoId" class="btn btn-sm btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
